{% extends 'base.html.twig' %}

{% block title %}Character creator{% endblock %}

{% block body %}
<head>
    {% block stylesheets %}
        <link href="{{ asset('css/characterSheet.css') }}" type="text/css" rel="stylesheet" />
    {% endblock %}
</head>


<div class="sheet-creator">
<div class="widget-list">
    <p>...</p>
    <input type="text" placeholder="rechercher un widget" name="search">
    <button>rechercher</button>
    {% for widget in widgets %}
        <div class="widget" id="{{ widget.name}}" draggable="true" ondragstart="drag(event)">
            
            {{widget.contenu}}
        </div>
    {% endfor %}
   
</div>
<div class="sheet-preview" id="sheet-preview-id" ondrop="drop(event)" ondragover="allowDrop(event)">

    <p>
        ...
    </p>

</div>
</div>

<script src="{{ asset('js/widgets.js') }}">
    
</script>
{% endblock %}

