{% extends 'base.html.twig' %}

{% block title %}Character creator{% endblock %}

{% block body %}
<head>
    {% block stylesheets %}
        <link href="{{ asset('css/characterSheet.css') }}" type="text/css" rel="stylesheet" />
        <head> 
  </head>
    {% endblock %}
</head>


<div class="sheet-creator">
<div class="widget-list">
<div class="hide">
    <button onclick="closeDiv()">X</button>
    </div>
    <h1>Widgets</h1>

    <div class="recherche">
        <input type="text" placeholder="Rechercher un widget" name="search">
        <button>Rechercher</button>
    </div>
    <script>
        let content = "";
    </script>

    {% for widget in widgets %}
    {% set content %}
    { include 'widgets/Life_bar.html' }
    {% endset %}
    <div class="widget_container">
        <div class="name">
            <div>{{ widget.name }}</div>
            <button onclick="editWidget({{widget.id}})">Ã‰diter</button>
        </div>
        
        <hr>
        <div class="preview">
            <div class="widget" id="{{ widget.id}}" draggable="true" ondragstart="drag(event)">
            {{ widget.contenu|raw }}
            </div>
        </div>
        <hr>
        <div class="information">
            <p class="auteur">Auteur: {{ widget.auteur }}</p>
            
            <p class="rating">Rating: {{ widget.rating }}/5</p>
        </div>
    </div>
    {% endfor %}
   
</div>
<div class="sheet-preview" id="sheet-preview-id" ondrop="drop(event)" ondragover="allowDrop(event)">

    

</div>
</div>

<script src="{{ asset('js/widgets.js') }}">
    
</script>
{% endblock %}