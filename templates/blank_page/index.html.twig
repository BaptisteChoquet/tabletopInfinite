{% extends 'base.html.twig' %}

{% block title %}Character creator
{% endblock %}

{% block body %}
<head>
    {% block stylesheets %}
        <link href="{{ asset('css/style.css') }}" type="text/css" rel="stylesheet" />
        <link href="{{ asset('css/characterSheet.css') }}" type="text/css" rel="stylesheet" />
    {% endblock %}
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
    <script>
                function fav(idWidget){
                       
                            jQuery.ajax({  
                                url:'/sheet_creator',  
                                type:'POST',
                                data: {id: idWidget},  
                                async:true,  
                            });
                            let favButton = document.getElementById('favoryBtn');
                            if (favButton.style.color == "red"){
                                favButton.style.color = "green";
                            }else if (favButton.style.color =="green"){
                                favButton.style.color = "red";
                            }
                       
                }
                </script>
</head>
{% include 'tabletop_infinite/Marketplace/navbar.html.twig' %}


<div class="sheet-creator">
<div class="widget-list" id="WL">
<div class="hide">
    </div>
    <h1>Widgets</h1>
    <div class="cont_btn">
        <button onclick="apercu()" >Apercu</button>
        <button onclick="save()">Sauvegarder</button>
    </div>
    
    <div class="recherche">
        <input type="text" placeholder="Rechercher un widget" name="search" id="search">
        <button>Rechercher</button>
    </div>
    <script>
        let content = "";
    </script>
    {% for widget in widgets %}
    <div class="widget_container">
        <div class="name" style="display:flex; justify-content:space-between">
            <div>{{ widget.name }}</div>
                        <button id="closeBtn" onclick="closeDiv({{ widget.id}})">X</button>
                <script>
                    function closeDiv(id){
                        let div = document.getElementById(id);
                        div.style.display = "none";
                    }

                    
                </script>
                
                
                
            
            
        </div>
        
        <hr>
        <div class="preview">
            <div class="widget" id="{{ widget.id}}" draggable="true" ondragstart="drag(event)">
            {{ widget.contenu|raw }}

            </div>
        </div>
        <hr>
        <div class="information">
            <p class="auteur">Auteur: {{ widget.auteur }}</p>
            
            <p class="rating">Rating: {{ widget.rating }}/5</p>
            {% if favorys %}
                        
                            {% for favory in favorys %}
                                {% if widget == favory.widget %}
                                    <a><button id="favoryBtn" onclick="fav({{ widget.id}})"style ="color: red;" >Favory</button></a>
                                    {% else %}
                                    <a><button id="favoryBtn" onclick="fav({{ widget.id}})" style ="color: green;">Favory</button></a>
                                {% endif %}
                            {% endfor %}
                        {% else %}
                            
                         <a><button id="favoryBtn" onclick="fav({{ widget.id}})" style ="color: green;">Favory</button></a>

                        {% endif %}
        </div>
    </div>
    {% endfor %}
   
</div>
<form action="/add/template" class="pop_up_save" id="pop_up_save" method="post">
    <h1>Sauvegarder</h1>
    <label>Quel est le nom de votre projet?</label>
    <input type="text" id="nameTemplate" name="name">
    <input type="text" id="descriptionTemplate" name="description">
    <input type="text" id="invisiblevalue" name="page">
    <button >Sauvegarder</button>
</form>
<div class="sheet-preview" id="sheet-preview-id" ondrop="drop(event)" ondragover="allowDrop(event)">
{% if template  %}
 {{template.contenu|raw}}
{% endif %}

</div>
</div>

<script>



</script>

<script src="{{ asset('js/widgets.js') }}">
    
</script>

{% endblock %}
