{% extends 'base.html.twig' %}

{% block title %}Template index{% endblock %}

{% block body %}
    <h1>Template index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Contenu</th>
                <th>Rating</th>
                <th>Type</th>
                <th>Tag</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for template in templates %}
            <tr>
                <td>{{ template.id }}</td>
                <td>{{ template.Name }}</td>
                <td>{{ template.description }}</td>
                <td>{{ template.Contenu }}</td>
                <td>{{ template.rating }}</td>
                <td>{{ template.type }}</td>
                <td>{{ template.tag ? template.tag|join(', ') : '' }}</td>
                <td>
                    <a href="{{ path('template_show', {'id': template.id}) }}">show</a>
                    <a href="{{ path('template_edit', {'id': template.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('template_new') }}">Create new</a>
{% endblock %}
