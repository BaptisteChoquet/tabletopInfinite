{% extends 'base.html.twig' %}

{% block title %}Template{% endblock %}

{% block body %}
    <h1>Template</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ template.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ template.Name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ template.description }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ template.Contenu }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ template.rating }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ template.type }}</td>
            </tr>
            <tr>
                <th>Tag</th>
                <td>{{ template.tag ? template.tag|join(', ') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('template_index') }}">back to list</a>

    <a href="{{ path('template_edit', {'id': template.id}) }}">edit</a>

    {{ include('template/_delete_form.html.twig') }}
